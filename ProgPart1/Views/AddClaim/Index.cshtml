@model IEnumerable<ProgPart1.Models.Claims>

@{
	ViewBag.Title = "Claims";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
	<h2>Claim</h2>
	<a href="/AddClaim/Add" class="btn btn-primary"> + Add New Claim </a>
</div>

@if (TempData["Success"] != null)
{
	<div class="alert alert-success alert-dismissible fade show">
		@TempData["Success"]
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
	</div>
}

@if (TempData["Error"] != null)
{
	<div class="alert alert-danger">@TempData["Error"]</div>
}


<div class="card">
	<div class="card-body">
		@if (!Model.Any())
		{
			<div class="text-center py5">
				<p class="text-muted">No claims submitted yet</p>
				<a href="/AddClaim/Add" class="btn btn-primary">Add Your First Claim</a>
			</div>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th>Month</th>
						<th>Taught</th>
						<th>Amount</th>
						<th>Description</th>
						<th>Status</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var claims in Model)
					{
						<tr>
							<td><strong>@claims.SubmittedBy</strong></td>
							<td>@claims.Month</td>
							<td>@claims.Amount</td>
							<td>
								@if (claims.Status == ProgPart1.Models.ClaimStatus.Pending)
								{
									<span class="badge bg-warning text-dark">Pending</span>
								}
								else if (claims.Status == ProgPart1.Models.ClaimStatus.Declined)
								{
									<span class="badge bg-danger text-dark">Declined</span>
								}
								else
								{
									<span class="badge bg-success text-dark">Approved</span>
								}
							</td>
							<td>
								<a href="/AddClaim/Details/@claims.Id" class="btn btn-sm btn-outline-primary">View Details</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		}
	</div>
</div>
